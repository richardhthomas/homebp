<div id='main'>
	
	<%= render 'info/generic_title' %>
	
	<div id='strip3'>
		<div id='strip3_content'>
			<div id='text'>
			<h2>Contact us</h2>
			
			<p>Please use the form below to contact us with any queries. However, be aware that although we frequently check for messages, this service is not able to provide any emergency medical advice. If you are feeling seriously unwell then please seek medical attention with your local doctor and do not await a response from us.</p>
			</div>
			
			<div id='contact_form'>
				<%= form_for @message do |f| %>
					<table>
						<tr>
							<td class='label'><%= f.label :name %></td>
							<td><%= f.text_field :name %></td>
							<td></td>
						</tr>
						<tr>
							<td class='label'><%= f.label :email %></td>
							<td><%= f.text_field :email %></td>
							<td></td>
						</tr>
						<tr>
							<td class='label'><%= f.label :content, "Message" %></td>
							<td colspan='2'><%= f.text_area :content, :rows => 5 %></td>
						</tr>
						<tr>
							<td class='label'></td>
							<td><%= f.submit "Send Message", :class => 'button4' %></td>
							<td></td>
						</tr>
					</table>
  
	  				<% if @message.errors.any? %>	
	    				<div id="error_explanation">
							<%= error_messages_for "message" %>
						</div>
  					<% end %>
				<% end %>
			</div>

		</div>
	</div>
</div>


