<%= form_for(@current_bp) do |f| %>
	<% if @current_bp.errors.any? %>
    	<div id="error_explanation">
			<%= error_messages_for "current_bp", "sysbp" %>
		</div>
  	<% end %>

	<div id='input_bp_boxes'>
    	<%= f.text_field(:sysbp, size: 4) %>
  		<div id='slash'>
  			/
  		</div>
	    <%= f.text_field(:diabp, size: 4) %>
  		<div id='mmhg'>
  			mmHg
  		</div>
  	</div>
  	<div class="actions">
	   	<%= f.submit 'Next' %>
	</div>
<% end %>