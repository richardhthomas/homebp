<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>user id</th>
      <th>email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      	<td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send message', admin_mail_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>